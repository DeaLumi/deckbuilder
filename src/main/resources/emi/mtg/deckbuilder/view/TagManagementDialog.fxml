<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<fx:root type="DialogPane" xmlns="http://javafx.com/javafx"
         xmlns:fx="http://javafx.com/fxml">
    <content>
        <BorderPane>
            <padding>
                <Insets topRightBottomLeft="8.0"/>
            </padding>
            <center>
                <HBox alignment="CENTER" spacing="8.0">
                    <VBox spacing="8.0">
                        <Label text="Known tags:"/>
                        <ListView fx:id="knownTagsList"/>
                        <HBox alignment="CENTER" spacing="8.0">
                            <TextField maxWidth="Infinity" promptText="New tag..." fx:id="newTagText"/>
                            <Button text="+" onAction="#addTag" fx:id="newTagBtn"/>
                        </HBox>
                    </VBox>
                </HBox>
            </center>
        </BorderPane>
    </content>
    <buttonTypes>
        <ButtonType fx:constant="APPLY"/>
        <ButtonType fx:constant="CANCEL"/>
    </buttonTypes>
</fx:root>