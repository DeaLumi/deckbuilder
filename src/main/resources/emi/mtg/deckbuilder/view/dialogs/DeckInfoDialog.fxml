<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<fx:root type="DialogPane" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml">
    <content>
        <GridPane hgap="8.0" vgap="8.0">
            <Label text="Name:"
                   GridPane.valignment="TOP"
                   GridPane.halignment="RIGHT"
                   GridPane.rowIndex="0"
                   GridPane.columnIndex="0"/>
            <TextField fx:id="deckNameField" promptText="Deck name"
                       GridPane.valignment="TOP"
                       GridPane.halignment="LEFT"
                       GridPane.rowIndex="0"
                       GridPane.columnIndex="1"/>

            <Label text="Author:"
                   GridPane.valignment="TOP"
                   GridPane.halignment="RIGHT"
                   GridPane.rowIndex="1"
                   GridPane.columnIndex="0"/>
            <TextField fx:id="authorField" promptText="Author name"
                       GridPane.valignment="TOP"
                       GridPane.halignment="LEFT"
                       GridPane.rowIndex="1"
                       GridPane.columnIndex="1"/>

            <Label text="Format:"
                   GridPane.valignment="TOP"
                   GridPane.halignment="RIGHT"
                   GridPane.rowIndex="2"
                   GridPane.columnIndex="0"/>
            <ComboBox fx:id="formatCombo" promptText="Deck format"
                      GridPane.valignment="TOP"
                      GridPane.halignment="LEFT"
                      GridPane.rowIndex="2"
                      GridPane.columnIndex="1"/>

            <Label text="Description:"
                   GridPane.valignment="TOP"
                   GridPane.halignment="RIGHT"
                   GridPane.rowIndex="3"
                   GridPane.columnIndex="0"/>
            <TextArea fx:id="descriptionField" promptText="Deck description"
                      GridPane.valignment="TOP"
                      GridPane.halignment="LEFT"
                      GridPane.rowIndex="3"
                      GridPane.columnIndex="1"/>
        </GridPane>
    </content>
    <buttonTypes>
        <ButtonType fx:constant="OK"/>
        <ButtonType fx:constant="CANCEL"/>
    </buttonTypes>
</fx:root>
