<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.input.KeyCodeCombination?>

<fx:root type="BorderPane" fx:controller="emi.mtg.deckbuilder.view.MainWindow" xmlns:fx="http://javafx.com/fxml">
    <top>
        <MenuBar>
            <menus>
                <Menu text="Deck">
                    <Menu text="New..." fx:id="newDeckMenu" accelerator="Shortcut+N"/> <!-- Children are populated by controller. -->
                    <MenuItem text="Open" onAction="#openDeck" accelerator="Shortcut+O"/>
                    <MenuItem text="Save" fx:id="saveDeckMenuItem" onAction="#saveDeck" accelerator="Shortcut+S"/>
                    <MenuItem text="Save As" fx:id="saveDeckAsMenuItem" onAction="#saveDeckAs" accelerator="Shift+Shortcut+S"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="Import" onAction="#importDeck"/>
                    <MenuItem text="Export" onAction="#exportDeck"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="Validate" onAction="#validateDeck"/>
                    <MenuItem text="Info..." onAction="#showDeckInfoDialog"/>
                </Menu>
                <Menu text="Application">
                    <!--<MenuItem text="Settings..."/>-->
                    <MenuItem text="Preferences" onAction="#showPreferencesDialog"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="Manage Tags" onAction="#showTagManagementDialog"/>
                    <MenuItem text="Save Card Tags" onAction="#saveTags"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="Update Deck Builder" onAction="#updateDeckbuilder"/>
                    <MenuItem text="Update Data" onAction="#updateData"/>
                    <MenuItem text="Remodel" onAction="#remodel"/>
                    <SeparatorMenuItem/>
                    <MenuItem text="Quit" onAction="#actionQuit">
                        <accelerator>
                            <KeyCodeCombination code="Q" alt="UP" control="UP" shift="UP" meta="DOWN" shortcut="ANY"/>
                        </accelerator>
                    </MenuItem>
                </Menu>
                <Menu text="Help">
                    <MenuItem text="Tips &amp; Tricks" onAction="#showTipsAndTricks"/>
                    <MenuItem text="Filter Syntax" onAction="#showFilterSyntax"/>
                    <MenuItem text="About" onAction="#showAboutDialog"/>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <center>
        <SplitPane orientation="VERTICAL" fx:id="collectionSplitter">
            <SplitPane fx:id="deckSplitter" AnchorPane.rightAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.topAnchor="0.0"/>
        </SplitPane>
    </center>
</fx:root>
